root = true

[(.|)*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[{(.|)*.{css,elm,html,{,c,m}js,json,md,yml},.{parcel,prettier}rc}]
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{(.|)*.{css,html,js,json,md,mjs,yml},.{parcel,prettier}rc}]
indent_size = 2

[{*.elm,elm.json,elm-tooling.json,.vscode/settings.json}]
indent_size = 4
